<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

<style>
    /* Navbar Brand styling */
    .navbar-brand {
        font-family: 'Poppins', sans-serif;
        font-weight: 600;
        font-size: 1.5rem;
        color: #007bff; /* Change color to something eye-catching */
    }

    /* Username styling */
    .navbar-text {
        font-family: 'Poppins', sans-serif;
        font-size: 1.2rem;
        color: #333;
        text-transform: uppercase;
        font-weight: 400;
        margin-right: 1rem; /* Adds spacing between username and hamburger */
    }

    /* Navbar background */
    .navbar {
        background-color: #f8f9fa; /* Subtle light background */
        padding: 0.75rem 1.5rem;
    }

    /* Navbar links styling */
    .nav-link {
        font-family: 'Poppins', sans-serif;
        font-weight: 500;
        color: #333 !important;
        transition: color 0.3s ease;
    }

    /* Hover effects for links */
    .nav-link:hover {
        color: #007bff !important; /* Match brand color on hover */
    }

</style>

<header>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/">ChatApp</a>

        <% if (user) { %>
            <span class="navbar-text ml-auto"><%= user.username.toUpperCase() %></span> <!-- Username always visible -->
        <% } %>

        <button class="navbar-toggler ml-2" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/about">About</a>
                </li>
                <% if (!user) { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/register">Register</a>
                    </li>
                <% } else { %>
                    <li class="nav-item">
                        <a class="nav-link" href="/chat/user/<%= user._id %>">Chat</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/dashboard">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/auth/logout">Logout</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>
</header>
